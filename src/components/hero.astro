---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/mescla.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block rounded-sm">
    <Picture
      src={heroImage}
      alt="Mescla Digital"
      widths={[200, 400, 600]}
      aspectRatio="4:3"
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
      class="rounded-lg"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Sua nova parceira, a Mescla Digital.
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Somos mais que uma empresa, somos criadores apaixonados, inovadores
      incans√°veis e solucionadores de problemas digitais.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3"></div>
  </div>
</main>
